<script type="text/javascript">
	jQuery(function($){
		$('.card').click(function(){
			var section_link_number = $(this).data('section-link-number');
			var section_element = $('.linked-section-'+section_link_number);
			var scroll_value = section_element.offset().top;
			console.log(scroll_value);
			$('html,body').animate({
				scrollTop: (scroll_value + 1)+'px'
			});
		});

        var cousin;
		$(".switch").click(function(){
            var parent = $(this).parent(".col-md-5");
            var uncle = $(parent).siblings(".col-md-7");
            cousin = $(uncle).text();

            $(uncle).html(this);
            $(parent).html(cousin);
		});
	});
</script>


